{% extends 'base.html.twig' %}

{% block title %}Importer le fichier{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('error') %}
    <div class="text-center alert alert-danger mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="content">

        <div class="card">
            <div class="card-header">
                Choisir un fichier CSV ou XLSX, XLS
            </div>
            <div class="card-body">
                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <div>
                    <p style="color:red">NB veuillez importer le fichier sous ce format</p>
                    <img src="{{asset('images/ImageRE.png')}}" width="500px" alt="Erreur 404" srcset="">
                </div>
                <button class="btn btn-primary mt-2">{{ button_label|default('Importer le fichier') }}</button>
                {{ form_end(form) }}
            </div>
        </div>

    </div>

</div>
{% endblock %}
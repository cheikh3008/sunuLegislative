{% extends 'base.html.twig' %}

{% block title %}La liste des coalitions{% endblock %}

{% block body %}


<div class="container">
    {% for message in app.flashes('success') %}
    <div class="text-center alert alert-success mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="card mt-2 mb-2" style="width: 100%;">
        <div class="card-header" style="padding:20px;background-color:#fff !important;">
            <div class="d-flex justify-content-between">
                <div class="mt-2">
                    <h4>La liste des coalitions</h4>
                </div>
                <div>
                    <a href="{{path('app_retenus_new')}}" class="mx-1 my-2 btn btn-secondary">Ajouter</a>
                    <a href="{{path('app_retenus_add')}}" class="mx-1 my-2 btn btn-success">Importer le fichier</a>
                </div>
            </div>
        </div>

    </div>
    <div class="content table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom de la coalition</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for retenus in retenuses %}
                <tr>
                    <td>{{ retenus.nom}}</td>
                    <td>
                        <a href="{{ path('app_retenus_edit', {'id': retenus.id}) }}"
                            class="mx-1 my-2 btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="{{ path('app_retenus_delete', {'id': retenus.id}) }} "
                            class="mx-1 my-2 btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <div class="alert alert-danger">
                        <td>Aucun enregistrement trouv√©</td>
                    </div>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}SunuLégislatives2022 | ajouter un représentant{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
    <div class="text-center alert alert-success mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
    <div class="text-center alert alert-danger mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="content">
        <div class="card">
            <div class="card-header">
                <h4>Pour quel bureau de vote, souhaitez-vous être Représentant ?</h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <a href="{{path('app_lieu_add')}}" class="btn btn-warning" >Précédent</a>
                <button class="btn btn-success">{{ button_label|default('Suivant') }}</button>
                {{ form_end(form) }}
            </div>
        </div>


    </div>
</div>

{% endblock %}
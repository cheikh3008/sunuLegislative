{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form method="post">
                    {% if error %}
                    <div class="alert alert-danger">
                        Nom d'utilisateur ou mot de passe incorrect !
                    </div>
                    {% endif %}

                    <div class="card">
                        <div class="card-header">
                            <h1 class="h3 mt-3 mb-3 font-weight-normal">Bienvenu Ã  SunuLegislative 2022</h1>
                        </div>
                        <div class="card-body">
                            <div class="form-group">

                                <label class="pb-2" for="inputUsername">Username</label>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                    placeholder="Entrer votre nom d'utilisateur" class="form-control"
                                    autocomplete="username" required autofocus>
                            </div>
                            <div class="form-group mt-3">

                                <label class="pb-2" for="inputPassword">Mot de passe</label>
                                <input type="password" placeholder="Entrer votre mot de passe" name="password"
                                    id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                            <button class=" mt-3 btn btn-lg btn-primary" type="submit">
                                Connexion
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}La liste des bureaux de vote{% endblock %}

{% block body %}


<div class="container-fluid">
    {% for message in app.flashes('success') %}
    <div class="text-center alert alert-success mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
    <div class="text-center alert alert-danger mt-2" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="card mt-2 mb-2" style="width: 100%;">
        <div class="card-header" style="padding:20px;background-color:#fff !important;">
            <div class="d-flex justify-content-between">
                <div class="mt-2">
                    <h4>Résultats des bureaux de vote pour chaque coalition</h4>
                </div>
                <div>
                    <a href="{{path('app_resultat_new')}}" class="btn btn-success">Ajouter</a>
                    {# <a href="" class="btn btn-success">Importer le fichier</a> #}
                </div>
            </div>
        </div>

    </div>

    <div class="content table-responsive">
        {% if resultats %}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom coalition</th>
                    <th>Nombre d'inscit</th>
                    <th>Nombre de vote</th>
                    <th>Bulletin null</th>
                    <th>Bulletin exprimé</th>
                    <th>Présentant</th>
                    <th>Bureau de vote</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for resultat in resultats %}
                <tr>
                    <td>{{ resultat.nbInscrit }}</td>
                    <td>{{ resultat.nbVotant }}</td>
                    <td>{{ resultat.bulletinNull }}</td>
                    <td>{{ resultat.bulletinExp }}</td>
                    <td>{{ resultat.user.prenom }} {{resultat.user.nom}}</td>
                    <td>{{ resultat.user.BV.NomBV }}</td>
                    <td>
                        <a href="{{ path('app_resultat_edit', {'id': resultat.id}) }}"
                            class="mx-1 my-2 btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="{{ path('app_resultat_delete', {'id': resultat.id}) }} "
                            class="mx-1 my-2 btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        {% else %}
        <div class="alert alert-danger text-center" role="alert">
            <span>Aucun enregistrement trouvé </span>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}